chdir "{gerrit_working_dir}";
print "Setting tree back to commited changes only\n";
my $cmd = "{repo_cmd} forall -c \"git reset --hard m/{gerrit_branch}\"";
print "$cmd\n";
my $out = `$cmd 2>&1`;
my $ec = $?;
print "$out\n";

$cmd = "{repo_cmd} forall -c \"git clean -xfd\"";
print "$cmd\n";
my $out = `$cmd 2>&1`;
my $ec = $?;
print "$out\n";
exit $ec;

