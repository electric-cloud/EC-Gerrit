if (!-d "{gerrit_working_dir}") {
    mkdir "{gerrit_working_dir}";
}
chdir "{gerrit_working_dir}";
my $cmd = "{repo_cmd} init -u git://" . qw({gerrit_server}) . "/platform/manifest.git -b " . 
    qw({gerrit_branch}) . " -m " . qw({gerrit_manifest});
print "$cmd\n";
my $out = `$cmd 2>&1`;
my $ec = $?;
print "$out\n";
exit $ec;


